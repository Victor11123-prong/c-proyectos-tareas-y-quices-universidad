esta ejecuta una linea de codigo, de lo contrario que es el (else) ejecuta otra linea de codigo */


/*PUNTO 4*/

/*4.1*/
#include<iostream>

using namespace std;

int main () {

int i;

for(i=1; i<=10; i++) {
cout<<i<<endl;
} 

    return 0;
}
/*4.2*/
#include <iostream>
using namespace std;

int main() {
    int i = 10;

    while (i >= 1) {
        cout << i << endl;
        i--;
    }

    return 0;
}
/*4.3*/
#include <iostream>
using namespace std;

int main() {
    int i = 2;

    do {
        cout << i << endl;
        i += 2;
    } while (i <= 20);

    return 0;
}
